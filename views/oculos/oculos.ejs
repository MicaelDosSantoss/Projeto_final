<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Estoque</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">     
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    

    <%- include('../partials/header.ejs')%>
    
    <div class="container mt-5">
        <h1 class="text-center">Sistema de Estoque</h1>

        <!-- Barra de pesquisa -->
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <input type="text" id="search-bar" class="form-control" placeholder="Pesquisar produto..." onkeyup="searchItem()">
            </div>
        </div>

        <!-- Botão para adicionar item -->
        <div class="text-center mt-4">
            <a href="/oculos/addItem" class="btn btn-primary">Adicionar Item</a>
        </div>

        <!-- Tabela de Itens -->
        <div class="row mt-4">
            <div class="col-md-10 offset-md-1">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Forma</th>
                            <th>Marca</th>
                            <th>Valor</th>
                            <th>Genero</th>
                            <th>Tamanho</th>
                            <th>Material</th>
                            <th>Metodos</th>
                        </tr>
                    </thead>
                    <tbody id="inventory-table-body">
                        <!-- Os itens do estoque serão exibidos aqui -->
                         <% if (oculos && oculos.length > 0)  {%>
                         <% oculos.forEach( oculo => {  %>  
                         <tr>
                            <th><%= oculo.Id_oculos %></th>
                            <th><%= oculo.Forma %></th>
                            <th><%= oculo.Marca %></th>
                            <th><%= oculo.Valor %></th>
                            <th><%= oculo.Genero %></th>
                            <th><%= oculo.Tamanho %></th>
                            <th><%= oculo.Material %></th>
                            <td>
                                <a class="btn btn-warning btn-sm" href="/oculos/update-view/<%= oculo.Id_oculos %>">Upgrade</a>
                                <!-- <form action="/oculos/delete/<%= oculo.Id_oculos %>?_method=delete" method="post" class="d-inline"> -->
                                    <button class="btn btn-danger btn-sm" onclick="deleteOculos('<%= oculo.Id_oculos %>')">Remover</button>
                                </form>
                            </td>
                         </tr>
                         <% }) %>
                         <%} else {%>
                            <tr>
                                <th>Oculos não encontrado!</th>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="../../javascript/oculos_alert.js"></script>
</body>
</html>